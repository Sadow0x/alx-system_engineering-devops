# HAproxy HTTP to HTTPS redirection configuration

frontend www-http
    bind *:80
    default_backend servers

frontend www-https
    bind *:443 ssl crt /etc/ssl/holberton.pem
    reqadd X-Forwarded-Proto:\ https
    default_backend servers

backend servers
    balance roundrobin
    server web-01 34.198.248.145:80 check
    server web-02 54.89.38.100:80 check
